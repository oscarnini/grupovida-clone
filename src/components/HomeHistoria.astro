---
import historiaHeader from '@imgs/historia-header.jpg'
import ArrowDown from './icons/arrow-down.astro'
import { map } from 'astro:schema'

const { class: className } = Astro.props

const FORMULATIONS = [
    {
        title: 'Misión',
        description: 'Creamos experiencias enriquecedoras para tus sentidos, que nutren y alimentan sanamente.'
    },
    {
        title: 'Visión',
        description: 'Lograr tener un mundo sano para vivir, donde todas las personas estén conscientes de que el origen de su bienestar '+
        'y el de sus seres queridos es alimentación saludable.'
    },
]

---

<section class={className}>
    <div class="flex justify-center bg-fixed bg-cover bg-position-[830px] md:bg-center object-cover w-full min-h-dvh"
        style={`background-image:url(${historiaHeader.src})`}>
       <div class="absolute flex flex-col justify-center items-center h-dvh">
            <div class="flex justify-center items-center h-1/8 sm:h-1/3">
                <h1 class="text-white text-3xl md:text-5xl lg:text-6xl font-extrabold capitalize
                    text-shadow-lg text-shadow-primary">
                    Nuestra historia
                </h1>
            </div>
            <div class="h-1/3">
                <div class="flex justify-center">
                    <h2 class="text-primary font-bold bg-white/80 text-xl md:text-2xl xl:text-3xl text-center p-2 rounded-xl">
                        Identidad Corporativa
                    </h2>
                </div>
                <div class="flex justify-evenly max-sm:flex-col max-sm:items-center my-1 sm:my-8">
                    {
                        FORMULATIONS.map((formulation, index) => (
                            <div class="bg-white/85 outline-2 outline-primary/90 rounded-md shadow-2xl shadow-secundary w-4/5 sm:w-1/3
                                max-sm:my-4 ">
                                <h3 class="text-lg md:text-xl xl:text-2xl text-primary font-extrabold text-center py-4">
                                    {formulation.title}
                                </h3>
                                <p class="text-secundary text-center font-bold md:text-lg p-4">
                                    {formulation.description}
                                </p>
                            </div>
                        ))

                    }
                </div>
            </div>
            <div class="flex justify-center items-end sm:items-center h-1/3">
                <a class="m-0 p-0" href="#history">
                    <ArrowDown class="text-primary bg-white/50 size-12 animate-bounce rounded-full" />
                </a>
            </div>
       </div>
    </div>
</section>